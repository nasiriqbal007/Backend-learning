<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Post</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-900 text-white">
    <div class="max-w-4xl mx-auto my-8 p-4">
      <!-- Update Post Form -->
      <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
        <h2 class="text-2xl text-center font-semibold mb-4">Update Post</h2>
        <form
          action="/updatePost/<%= post._id %>"
          method="POST"
          class="space-y-4"
        >
          <div class="flex flex-col">
            <label for="title" class="font-medium">Title</label>
            <input
              type="text"
              name="title"
              value="<%= post.title %>"
              placeholder="Enter title"
              class="p-2 border rounded-md bg-gray-700 text-white"
            />
          </div>
          <div class="flex flex-col">
            <label for="content" class="font-medium">Content</label>
            <textarea
              name="content"
              placeholder="Enter content"
              class="p-2 border rounded-md bg-gray-700 text-white"
            >
             <%= post.content %></textarea
            >
          </div>
          <div class="text-center">
            <input
              type="submit"
              value="Update Post"
              class="bg-blue-500 text-white px-6 py-2 rounded-md cursor-pointer"
            />
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
