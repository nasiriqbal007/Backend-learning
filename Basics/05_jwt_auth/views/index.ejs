<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900">
    <div class="max-w-md mx-auto mt-10">
      <form method="post" action="create">
        <input
          class="mb-4 px-3 py-2 outline-none border-2 border-gray-300 rounded-lg text-white bg-gray-800"
          type="text"
          name="username"
          placeholder="Username"
        />
        <input
          class="mb-4 px-3 py-2 outline-none border-2 border-gray-300 rounded-lg text-white bg-gray-800"
          type="email"
          name="email"
          placeholder="Email"
        />
        <input
          class="mb-4 px-3 py-2 outline-none border-2 border-gray-300 rounded-lg text-white bg-gray-800"
          type="password"
          name="password"
          placeholder="Password"
        />
        <input
          class="mb-4 px-3 py-2 outline-none border-2 border-gray-300 rounded-lg text-white bg-gray-800"
          type="number"
          name="age"
          placeholder="Age"
        />
        <input
          class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg cursor-pointer"
          type="submit"
          value="Create user"
        />
      </form>
    </div>
  </body>
</html>
